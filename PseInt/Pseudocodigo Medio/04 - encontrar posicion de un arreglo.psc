Algoritmo arreglos
	arreglo1 <- 0
	arreglo2 <- 0
	suma1 <- 0
	Para i <- 0 Hasta 5 Con Paso 1 Hacer
		Escribir "Ingrese los datos del arreglo 1, POSICION ", i
		Leer arreglo1
		Escribir "Ingrese los datos del arreglo 2 POSICION ", i
		Leer arreglo2
		suma1 = arreglo1 + arreglo2
		Escribir "La suma es de la poscion ", [i], " es: ", suma1
	FinPara
FinAlgoritmo
